# This record can be used to force a read of the detector status 
record(bo,"$(P)$(R)ReadStatus") {
    field(DTYP,"asynInt32")
    field(OUT, "@asyn($(PORT),$(ADDR),$(TIMEOUT))AK_READ_STATUS")
    field(VAL, "1")
    field(SCAN,"Passive")
    info(autosaveFields, "SCAN")
}

# asyn record for interactive communication with XT-PICO-SXL
record(asyn, "$(P)$(R)IPAsyn") {
    field(PORT,  "$(IP_PORT)")
    field(IMAX, "256")
    field(OMAX, "256")
}
